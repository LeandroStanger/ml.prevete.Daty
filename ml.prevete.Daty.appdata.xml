<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
    <id>ml.prevete.Daty</id>
    <launchable type="desktop-id">ml.prevete.Daty.desktop</launchable>
    <name>Daty</name>
    <summary>Free Wikidata editor.</summary>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0</project_license>
    <description>
        <p>
            <b>Daty is a Wikidata editor</b>
            With it you can search for concepts and read their properties.
        </p>
        <p>
            <b>Progressive layout</b>
            This application is ready for gnome mobile usage.
        </p>
        <p>
            <b>This is a preview release!</b>
            See the list of planned features for v1.0 stable on the the application website!
        </p>
    </description>
    <url type="homepage">https://gitlab.gnome.org/World/Daty/</url>
    <url type="help">https://gitlab.gnome.org/World/Daty/#documentation</url>
    <url type="bugtracker">https://gitlab.gnome.org/World/Daty/issues</url>
    <url type="donation">http://patreon.com/tallero</url>
